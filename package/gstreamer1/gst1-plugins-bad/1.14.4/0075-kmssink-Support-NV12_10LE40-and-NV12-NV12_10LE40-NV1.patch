   self = GST_KMS_SINK (bsink);
 
@@ -1302,6 +1422,10 @@ gst_kms_sink_propose_allocation (GstBaseSink * bsink, GstQuery * query)
   if (!gst_video_info_from_caps (&vinfo, caps))
