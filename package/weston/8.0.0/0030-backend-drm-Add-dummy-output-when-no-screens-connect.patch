 libweston/backend-drm/drm-internal.h |   6 +
 libweston/backend-drm/drm.c          | 209 ++++++++++++++++++++++++++-
 libweston/backend-drm/kms.c          |   2 +
 4 files changed, 214 insertions(+), 7 deletions(-)

