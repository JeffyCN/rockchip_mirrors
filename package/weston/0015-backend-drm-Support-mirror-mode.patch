+#ifdef HAVE_RGA
+static inline RgaSURF_FORMAT
+rga_get_format(const struct pixel_format_info *format)
+{
+	switch (format->bpp) {
+	case 32:
+		return RK_FORMAT_BGRX_8888;
+	case 16:
+		return RK_FORMAT_RGB_565;
+	default:
+		return RK_FORMAT_UNKNOWN;
+	}
+}
+#endif
